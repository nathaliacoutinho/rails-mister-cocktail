<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(177,98,61,0.6) 50%), url('https://images.unsplash.com/photo-1472245088132-ccd50746725c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fa7ad7a324cc9efb65fe1a3abf6c287d&auto=format&fit=crop&w=1349&q=800');">
  <div class="banner-content">
    <h1>Cocktails & Code</h1>
    <p>For drunk nerds</p>
    <%= link_to "add your own", new_cocktail_path(@cocktail), class: "btn btn-primary btn-lg"  %>
  </div>
</div>

<div class="container">
  <div class="row">
  <h3 class="divider">what are your favorites?</h3>
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
      <div class="col-sm-4">
        <div class="card-wrapper">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo %>');">
            </div>
              <div class="card-description">
                <h2><%= cocktail.name %></h2>
              </div>
          </div>
        </div>
        <% end %>
    <% end %>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="https://github.com/nathaliacoutinho"><i class="fab fa-github"></i></a>
    <a href="https://www.instagram.com/natccoutinho/"><i class="fab fa-instagram"></i></a>
    <a href="https://www.linkedin.com/in/nathalia-coutinho-94aa5b156/"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Cheers from Le Wagon Amsterdam <i class="fa fa-heart"></i>
  </div>
</div>
