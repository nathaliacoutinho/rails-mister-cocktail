<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,93,153,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @cocktail.photo %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <p>Try it out tonight!</p>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-danger btn-xs pull-right" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktail.doses.each do |dose| %>
        <% if dose.persisted? %>
          <p><%= dose.description + " " + "of" + " " + dose.ingredient.name %>
          <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs pull-right far fa-trash-alt" %>
          </p>
        <% end %>
    <% end %>
      <p><%= link_to  "home", cocktails_path(@cocktail), class: "btn btn-danger btn-xs pull-right" %></p>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
    <div class="footer-copyright">
      Cheers from Le Wagon Amsterdam<i class="fa fa-heart"></i>
    </div>
</div>
